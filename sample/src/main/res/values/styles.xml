<resources>

    <!-- Base application theme. -->
    <style name="AppTheme111" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme"></style>
    <!--入侵通知栏-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>
    <style name="TextStyleEd">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">13dp</item>
    </style>
    <style name="BaseRow">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SoundBtnStyle">
        <item name="android:textColor">#f8f8f8</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawableLeft">@drawable/sound_wave</item>
        <item name="android:background">@drawable/sound_bg_long2</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">36dp</item>
    </style>
</resources>
